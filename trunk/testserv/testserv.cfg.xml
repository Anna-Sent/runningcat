<?xml version="1.0" encoding="UTF-8"?>
<config>
	<comment>
		Testing System executes the command ("compile_cmd" and "execute_cmd" attributes values) 
		and arguments in a separate process with the specified working directory (in tmp/ directory).
		Constants: src_path, src_file, bin_path, bin_file, src_prefix.
	</comment>
	<general
		url="jdbc:mysql://localhost/moodle"
		user="moodleuser"
		password="moo"
	></general>
	<platform os="Linux">
		<pathes
			tmp="/tmp"
			tests="workDir/tests"
		></pathes>
		<compiler
			lang="Pascal/Delphi"
			id="1"
			output_file_descriptor="1"
			src_prefix="temp"
			src_suffix=".pas"
			bin_suffix=""
			compile_cmd="fpc,-Mdelphi,&lt;src_file&gt;"
			execute_cmd="&lt;bin_path&gt;"
		></compiler>
		<compiler
			lang="C/C++"
			id="0"
			output_file_descriptor="2"
			src_prefix="temp"
			src_suffix=".cpp"
			bin_suffix=""
			compile_cmd="g++,-o,&lt;bin_file&gt;,&lt;src_file&gt;"
			execute_cmd="&lt;bin_path&gt;"
		></compiler>
		<compiler
			lang="Java"
			id="2"
			output_file_descriptor="2"
			src_prefix="Main"
			src_suffix=".java"
			bin_suffix=".class"
			compile_cmd="javac,&lt;src_file&gt;"
			execute_cmd="java,&lt;src_prefix&gt;"
		></compiler>
		<compiler
			lang="Python"
			id="3"
			src_prefix="temp"
			src_suffix=".py"
			execute_cmd="python,&lt;src_file&gt;"
		></compiler>
	</platform>
	<platform os="Windows XP">
		<pathes
			tmp="workDir/tmp"
			tests="workDir/tests"
		></pathes>
		<compiler
			lang="Pascal/Delphi"
			id="1"
			output_file_descriptor="1"
			src_prefix="temp"
			src_suffix=".pas"
			bin_suffix=".exe"
			compile_cmd="fpc,-Ciort,-Mdelphi,&lt;src_file&gt;"
			execute_cmd="&lt;bin_path&gt;"
		></compiler>
		<language
			name="Pascal/Delphi"
			id="1"
			src_prefix="temp"
			src_suffix=".pas">
			<compile
				output_file_descriptor="1"
				bin_suffix=".exe"
				compile_cmd="fpc,-Ciort,-Mdelphi,&lt;src_file&gt;">
			</compile>
			<execute
				run_time_output_file_descriptor="1"
				execute_cmd="&lt;bin_path&gt;">
			</execute>
		</language>
		<compiler
			lang="C/C++"
			id="0"
			output_file_descriptor="2"
			src_prefix="temp"
			src_suffix=".cpp"
			bin_suffix=".exe"
			compile_cmd="g++,-o,&lt;bin_file&gt;,&lt;src_file&gt;"
			execute_cmd="&lt;bin_path&gt;"
		></compiler>
		<compiler
			lang="Java"
			id="2"
			output_file_descriptor="2"
			src_prefix="Main"
			src_suffix=".java"
			bin_suffix=".class"
			compile_cmd="javac,&lt;src_file&gt;"
			execute_cmd="java,&lt;src_prefix&gt;"
		></compiler>
		<language
			name="Java"
			id="2"
			src_prefix="Main"
			src_suffix=".java">
			<compile
				output_file_descriptor="2"
				bin_suffix=".class"
				compile_cmd="javac,&lt;src_file&gt;">
			</compile>
			<execute
				run_time_output_file_descriptor="2"
				execute_cmd="java,&lt;src_prefix&gt;">
			</execute>
		</language>
		<compiler
			lang="Python"
			id="3"
			src_prefix="temp"
			src_suffix=".py"
			execute_cmd="python,&lt;src_file&gt;"
		></compiler>
		<language
			name="Python"
			id="3"
			src_prefix="temp"
			src_suffix=".py">
			<execute
				run_time_output_file_descriptor="2"
				execute_cmd="python,&lt;src_file&gt;">
			</execute>
		</language>
	</platform>
</config>
